{{!-- Spells appear here --}}
{{#if system.ca}}
<h3>Spells</h3>
<ol class="items-list">
  {{#each spells as |spells spellLevel|}}
    <li class="item flexrow items-header">
      <div class="item-name">Level {{spellLevel}} Spells</div>
      <div class="item-prop"># Mem</div>
      <div class="item-prop">Range</div>
      <div class="item-prop">Duration</div>
      <div class="item-prop">Save</div>
      <div class="item-controls">
        <a class="item-control item-create" title="Create item" data-type="spell" data-spell-level="{{spellLevel}}">
          <i class="fas fa-plus"></i> {{localize "HYP3E.spell.addLvl"}} {{spellLevel}}
        </a>
      </div>
    </li>
    {{#each spells as |item id|}}
      <li class="item-entry item" data-item-id="{{item._id}}">
        <div class="item-header flexrow">
          <div class="item-name">
            <div class="item-image">
              {{#if item.system.attack}}
              <a class="rollable" data-roll-type="item" data-label="Attack with {{item.name}}"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
