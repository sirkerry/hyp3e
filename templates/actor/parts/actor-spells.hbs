  <div class="casting-ability flexrow flex-group-center">
    <span class="rollable" data-roll="1d20 + @bcb" data-label="Cast Spell">
      <label for="system.ca.value" class="spells-label">{{localize "HYP3E.castingAbility"}}</label> 
      <i class="fas fa-dice-d20"></i>
    </span>
    <input type="text" class="spells" name="system.ca.value" value="{{system.ca.value}}" data-dtype="Number"/>
  </div>
