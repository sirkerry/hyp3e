{{!-- Fightting skills and combat statistics --}}
<div class="combat-block flexrow">
  <div class="combat-block flexcol">
    <div class="resource-content flexrow flex-group-center">
      <label for="fighting-skills" class="combat-header">Fighting Skills</label>
    </div>
    <div class="resource-content flexrow flex-group-center">
      <span class="rollable flexlarge" data-roll="1d20 + @bab + @str.atkMod" data-label="Basic Attack">
        <label for="system.fa.value" class="combat-label">{{localize "HYP3E.fightingAbility"}}</label>
        <i class="fas fa-dice-d20"></i>
      </span>
      <input type="text" name="system.fa.value" value="{{system.fa.value}}" data-dtype="Number"/>
      <!-- <label for="system.atkRate" class="combat-label">Attack Rate</label>
      <input type="text" name="system.atkRate" value="{{system.atkRate}}" data-dtype="String"/> -->
      <label for="system.unskilled" class="combat-label">Unskilled</label>
      <input type="text" name="system.unskilled" value="{{system.unskilled}}" data-dtype="Number"/>
    </div>
    <div class="resource-content flexrow flex-group-center">
      <label for="system.proficiencies" class="combat-label">Weapon Skills & Masteries</label>
    </div>
    <div class="resource-content flexrow flex-group-center">
      <textarea name="system.proficiencies">{{system.proficiencies}}</textarea>
    </div>
  </div>
  <div class="combat-block flexcol">
    <div class="resource-content flexrow flex-group-center">
      <label for="combat-statistics" class="combat-header">Combat Statistics</label>
    </div>
    <div class="resource-content flexrow flex-group-center">
      <label for="system.hp.value" class="combat-label">Hit Points</label>
      <input type="text" name="system.hp.value" value="{{system.hp.value}}" data-dtype="Number"/>
      /
      <input type="text" name="system.hp.max" value="{{system.hp.max}}" data-dtype="Number"/>
      <span class="combat-label rollable" data-roll="{{system.hd}}+{{system.attributes.con.hpMod}}" data-label="Hit Die + CN mod">
        <label for="system.hd">Hit Die</label> <i class="fas fa-dice-d6"></i>
      </span>
      <input type="text" name="system.hd" value="{{system.hd}}" data-dtype="String"/>
    </div>
    <div class="resource-content flexrow flex-group-center">
      <label for="system.ac.value" class="combat-label">Armor Class</label>
      <input type="text" name="system.ac.value" value="{{system.ac.value}}" data-dtype="Number" disabled/>
      <label for="system.ac.dr" class="combat-label">DR</label>
      <input type="text" name="system.ac.dr" value="{{system.ac.dr}}" data-dtype="Number" disabled/>
      <label for="system.unarmoredAc" class="combat-label">Unarmored</label>
      <input type="text" name="system.unarmoredAc" value="{{system.unarmoredAc}}" disabled/>
    </div>
    <div class="resource-content flexrow flex-group-center">
      <label for="system.movement.base.value" class="combat-label">{{localize "HYP3E.movement.base.abbrev"}}</label>
      <input type="text" name="system.movement.base.value" value="{{system.movement.base.value}}" data-dtype="Number"/>
      <label for="system.otherMv.value" class="combat-label">{{localize "HYP3E.otherMv.abbrev"}}</label>
      <input type="text" name="system.otherMv.value" value="{{system.otherMv.value}}" data-dtype="String"/>
    </div>
  </div>
</div>

