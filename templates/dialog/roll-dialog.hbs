<form>
  <div class="hyp3e roll-dialog">
    {{#if data.rollData.details}}
      <div class="roll-details">
        {{data.rollData.details}}
      </div>
    {{/if}}
    <div class="form-group">
      <label>{{localize "HYP3E.rollFormula"}}</label>
      <input type="text" name="formula" value="{{dataset.roll}}" disabled />
    </div>
    <div class="form-group">
      <label>{{localize "HYP3E.sitMod"}}</label>
      <input type="text" name="bonus" value="" placeholder="{{localize 'HYP3E.rollExample'}}" />
    </div>
    <div class="form-group">
      <label>{{localize "HYP3E.rollMode"}}</label>
      <select name="rollMode">
        {{#select rollMode}}
        {{#each rollModes as |label mode|}}
          <option value="{{mode}}">{{localize label}}</option>
        {{/each}}
        {{/select}}
      </select>
    </div>
  </div>
</form>